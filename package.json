{
  "name": "cdk-monorepo-template",
  "version": "1.0.0",
  "private": true,
  "description": "a template for a monorepo structure that can be used for cdk projects",
  "license": "ISC",
  "author": "Georg DÃ¶rgeloh",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "precollect-reports": "npm run merge-coverage",
    "collect-reports": "mkdir -p reports && ./merge-reports.ts && cp coverage/lcov.info reports/lcov.info",
    "increase-version": "lerna version --conventional-commits",
    "lint": "eslint .",
    "list": "lerna list --all --long",
    "premerge-coverage": "mkdir -p .nyc_output && lerna exec -- cp coverage/coverage-final.json \\$LERNA_ROOT_PATH/.nyc_output/coverage-\\$\\(echo \\$LERNA_PACKAGE_NAME \\| sed 's/[@/]/_/g' \\).json \\|\\| true",
    "merge-coverage": "nyc merge .nyc_output coverage/coverage-final.json",
    "postmerge-coverage": "nyc report --reporter=clover --reporter=lcov --temp-dir coverage",
    "prepare": "husky install",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "test": "CI=true lerna run --parallel test",
    "update-packagelock": "lerna exec -- rm -rf node_modules package-lock.json && rm -rf node_modules package-lock.json && npm install --no-audit",
    "update-packages": "ncu -i -x /@types/node$/ && lerna exec --concurrency 1 -- ncu -i -x /@types/node$/",
    "watch": "lerna run --parallel watch -- -- --preserveWatchOutput"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/lerna__project": "^5.1.0",
    "@types/node": "^16.11.47",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "esbuild": "^0.15.5",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lerna": "^5.4.3",
    "npm-check-updates": "^16.0.5",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-jsdoc": "^0.3.38",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
