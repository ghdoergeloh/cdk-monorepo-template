{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react-hooks"],
  "extends": ["../../../.eslintrc.json", "plugin:react/recommended"],
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "ignorePatterns": ["build"]
}
