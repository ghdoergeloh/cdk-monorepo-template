{
  "$schema": "https://json.schemastore.org/prettierrc.json",
  "printWidth": 120,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "plugins": ["prettier-plugin-jsdoc"],
  "jsdocPrintWidth": 100,
  "jsdocSingleLineComment": false,
  "proseWrap": "always",
  "overrides": [
    {
      "files": "**/CHANGELOG.md",
      "options": {
        "proseWrap": "preserve"
      }
    }
  ]
}
